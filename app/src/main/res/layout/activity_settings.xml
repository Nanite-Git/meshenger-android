<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/basicSettingsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/nameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_change_name"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/secondaryTextColor"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/passwordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_change_password"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/passwordTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/secondaryTextColor"
                        android:textSize="15dp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/nightModeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_nightmode"
                        android:textSize="25dp"
                        android:textColor="?attr/primaryTextColor" />

                    <CheckBox
                        android:id="@+id/checkBoxNightMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:textColor="?attr/secondaryTextColor" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/blockUnknownLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_block_unknown"
                        android:textSize="25dp"
                        android:textColor="?attr/primaryTextColor" />

                    <CheckBox
                        android:id="@+id/checkBoxBlockUnknown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/settingsModeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="settings_settings_mode"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="25dp" />

                    <Spinner
                        android:id="@+id/spinnerSettingsMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:textSize="15dp"
                    />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/advancedSettingsLayout"
                android:layout_below="@+id/basicSettingsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/speakerphoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="settings_speakerphone"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="25dp" />

                    <Spinner
                        android:id="@+id/spinnerSpeakerphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:textSize="15dp"
                    />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_change_address"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/addressTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/secondaryTextColor"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/videoResolutionsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="settings_video_resolutions"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="25dp" />

                    <Spinner
                        android:id="@+id/spinnerVideoResolutions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:textSize="15dp"
                    />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/ignoreBatteryOptimizationsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_ignore_battery_optimizations"
                        android:textSize="25dp"
                        android:textColor="?attr/primaryTextColor" />

                    <CheckBox
                        android:id="@+id/checkBoxIgnoreBatteryOptimizations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:textColor="?attr/secondaryTextColor" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/expertSettingsLayout"
                android:layout_below="@+id/advancedSettingsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/videoCodecsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="settings_video_codecs"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="25dp" />

                    <Spinner
                        android:id="@+id/spinnerVideoCodecs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:textSize="15dp"
                    />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/audioCodecsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="settings_audio_codecs"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="25dp" />

                    <Spinner
                        android:id="@+id/spinnerAudioCodecs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:textSize="15dp"
                    />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/sendAudioLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable Microphone"
                        android:textSize="25dp"
                        android:textColor="?attr/primaryTextColor" />

                    <CheckBox
                        android:id="@+id/checkBoxSendAudio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:textColor="?attr/secondaryTextColor" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/receiveAudioLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable Speaker"
                        android:textSize="25dp"
                        android:textColor="?attr/primaryTextColor" />

                    <CheckBox
                        android:id="@+id/checkBoxReceiveAudio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:textColor="?attr/secondaryTextColor" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sendVideoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable Camera"
                        android:textSize="25dp"
                        android:textColor="?attr/primaryTextColor" />

                    <CheckBox
                        android:id="@+id/checkBoxSendVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:textColor="?attr/secondaryTextColor" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/receiveVideoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable Video"
                        android:textSize="25dp"
                        android:textColor="?attr/primaryTextColor" />

                    <CheckBox
                        android:id="@+id/checkBoxReceiveVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:textColor="?attr/secondaryTextColor" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/autoAcceptCallLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accept Calls Automatically"
                        android:textSize="25dp"
                        android:textColor="?attr/primaryTextColor" />

                    <CheckBox
                        android:id="@+id/checkBoxAutoAcceptCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:textColor="?attr/secondaryTextColor" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/autoConnectCallLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Calls Immediately"
                        android:textSize="25dp"
                        android:textColor="?attr/primaryTextColor" />

                    <CheckBox
                        android:id="@+id/checkBoxAutoConnectCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:textColor="?attr/secondaryTextColor" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/iceServersLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_change_ice_servers"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/iceServersTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/secondaryTextColor"
                        android:textSize="15dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>